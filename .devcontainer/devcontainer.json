// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"name": "Rust",
	"dockerComposeFile": "docker-compose.yml",
	"service": "web",
	"workspaceFolder": "/workspace",

	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt", "seccomp=unconfined"
	],

	"extensions": [
		"rust-lang.rust",
		"bungcip.better-toml",
		"vadimcn.vscode-lldb"
	],
	"settings": {
		"lldb.executable": "/usr/bin/lldb-3.9"
	}
}